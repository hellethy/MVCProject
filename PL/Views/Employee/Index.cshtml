@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<br />
<h1>All Employee</h1>
<br/>
<div class="row mt-5 justify-content-center align-items-center">
    <form asp-action="Index" class="col-8 row">
        <div class="col-8">
            <input type="text" class="form-control" placeholder="Search By Name" name="SearchValue" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </form>
</div>

<a class="btn btn-primary" asp-action="Create"> Create New Employee</a>
@if(Model.Count() > 0)
{
    <table class ="table table-striped mt-3 table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Image)</td>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.Age)</td>
                <td>@Html.DisplayNameFor(D => D.Department)</td>
                <td>@Html.DisplayNameFor(D => D.Address)</td>
                <td>@Html.DisplayNameFor(D => D.Salary)</td>
                <td>@Html.DisplayNameFor(D => D.Email)</td>
                <td>@Html.DisplayNameFor(D => D.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(D => D.HireDate)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <img src="~/Files/Images/@employee.ImageName" class="rounded img-fluid" height="50" width="50" alt="Employee Image"/>
                    </td>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    @*<td>@employee.Department?.Name</td>*@
                    <td>@Html.DisplayFor(M => employee.Department.Name)</td>
                    <td>@employee.Address</td>
                    <td>@employee.Salary</td>
                    <td>@employee.Email</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.HireDate</td>
                    <partial name="_ButtonsPartialView" model="@employee.Id.ToString()" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class=" mt-4 alert alert-warning">
        <h3> There is no Employees</h3>
    </div>
}