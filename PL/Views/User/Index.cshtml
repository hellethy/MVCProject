@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users Index";
}

<h1>All Users</h1>
<br />
<div class="row mt-5 justify-content-center align-items-center">
    <form asp-action="Index" class="col-8 row">
        <div class="col-8">
            <input type="text" class="form-control" placeholder="Search By Name" name="SearchValue" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
    </form>
</div>

<a class="btn btn-primary" asp-action="Create"> Create New Employee</a>
@if (Model.Count() > 0)
{
    <table class="table table-striped mt-3 table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.fname)</td>
                <td>@Html.DisplayNameFor(U => U.lname)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.fname</td>
                    <td>@User.lname</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join("," , User.Roles)</td>
                    <partial name="_ButtonsPartialView" model="@User.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class=" mt-4 alert alert-warning">
        <h3> There is no Users</h3>
    </div>
}